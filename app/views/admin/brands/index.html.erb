<%= link_to '新品牌', new_admin_brand_path %>
<h1>品牌列表</h1>

<table class="table table-hover table-condensed">
  <tr>
    <th>名称</th>
    <th>服装类型</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brands.each do |brand| %>
  <tr>
    <td><%= brand.name %></td>
    <td><%= brand.types.map(&:name).join(',') %></td>
    <td><%= link_to '显示', [:admin,brand] %></td>
    <td><%= link_to '编辑', edit_admin_brand_path(brand) %></td>
    <td><%= link_to '删除', [:admin,brand], confirm: '确定删除吗?', method: :delete %></td>
  </tr>
<% end %>
</table>

