<h1>问题列表</h1>

<table class="table table-hover table-condensed">
  <tr>
    <th>提问者</th>
    <th>服装链接</th>
    <th>上衣类型</th>
    <th>下衣类型</th>
    <th>内容</th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.user.try(:login) %></td>
    <td><%=link_to "服装产品网址链接", question.url %></td>
    <td><%= question.up_size %></td>
    <td><%= question.down_size %></td>
    <td><%= question.content %></td>
    <td><%= link_to '查看并回复', [:admin,question] %></td>
    <td><%= link_to '删除', [:admin,question], confirm: '确定删除?', method: :delete %></td>
  </tr>
<% end %>
</table>

<div class="pageinate"><%= will_paginate @questions %></div>

