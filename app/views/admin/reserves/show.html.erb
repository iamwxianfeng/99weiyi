<div class="col-sm-12">
  <h4>预约详情</h4>
  <hr>
  <form class="form-horizontal" role="form">
    <div class="form-group form-group-lg">
      <label class="col-sm-2 control-label" >预约人姓名</label>
      <div class="col-sm-10">
        <%= @reserve.name %>
      </div>
    </div>
    <div class="form-group form-group-lg">
      <label class="col-sm-2 control-label" >地址</label>
      <div class="col-sm-10">
        <%= @reserve.address %>
      </div>
    </div>
      <div class="form-group form-group-lg">
      <label class="col-sm-2 control-label" >手机号</label>
      <div class="col-sm-10">
        <%= @reserve.phone %>
      </div>
    </div>
      <div class="form-group form-group-lg">
      <label class="col-sm-2 control-label" >服务时间</label>
      <div class="col-sm-10">
        <%= @reserve.service_time %>
      </div>
    </div>
      <div class="form-group form-group-lg">
      <label class="col-sm-2 control-label" >状态</label>
      <div class="col-sm-10">
        <%= @reserve.human_status %>
      </div>
    </div>
    <div class="form-group form-group-lg">
      <label class="col-sm-2 control-label" >预约类型</label>
      <div class="col-sm-10">
        <%= @reserve.human_type %>
      </div>
    </div>

    <div class="form-group form-group-lg">
      <label class="col-sm-2 control-label">创建时间</label>
      <div class="col-sm-10">
        <%= @reserve.created_at %>
      </div>
    </div>
  </form>
<hr>
</div>



<div class="col-sm-12">
  <h4>审核状态</h4>
  <hr>
<%= form_for([:admin,@reserve], :html => { :class=> 'form-horizontal', :role=>'form'}) do |f| %>
<%= error_messages_for @reserve %>
   <div class="form-group form-group-lg">
      <label class="col-sm-2 control-label">设置状态</label>
      <div class="col-sm-3">
        <%= f.select(:status , options_for_select(Reserve::R_STATUS.invert,:selected => @reserve.status),{}, {:class => 'form-control' }) %>
      </div>
      <div class="col-sm-3">      <%= f.submit "提交", :class => "btn btn-default" %>  <%= link_to '返回', admin_reserves_path, :class => "btn btn-default" %>
     </div></div>
   </div>
<% end %>
</div>


