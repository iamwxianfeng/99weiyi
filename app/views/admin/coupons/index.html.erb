<%= link_to '新建优惠券', new_admin_coupon_path %>
<h1>优惠券列表</h1>

<table>
  <tr>
    <th>优惠券</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.title %></td>
    <td><%= coupon.amount %></td>
    <td><%= coupon.end_time %></td>
    <td><%= link_to '显示', [:admin,coupon] %></td>
    <td><%= link_to '编辑', edit_admin_coupon_path(coupon) %></td>
